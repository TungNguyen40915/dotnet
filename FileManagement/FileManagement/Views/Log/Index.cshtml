@{ ViewBag.Title = "Log"; }



<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link href="~/css/style.css" rel="stylesheet">
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<!-- container -->
<div class="container">
    <form id="searchForm" asp-controller="Log" asp-action="Search" method="GET" enctype="multipart/form-data">
        <div class="gpp20-section">
            <div class="gpp20-inputgroup">
                <p class="input-label">Filename</p>
                <input class="gpp20-search-form gpp_w66p" placeholder="Filename" aria-label="Filename" name="fileName" id="fileName" value="@ViewBag.fileName" />
            </div>
            <div class="gpp20-inputgroup">
                <p class="input-label">Username</p>
                <input class="gpp20-search-form gpp_w66p" placeholder="UserId" aria-label="UserId" name="userId" id="userId" value="@ViewBag.userId">
            </div>
            <div class="gpp20-inputgroup">
                <p class="input-label">Operation Type</p>
                <div class="chkbox-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="upload" id="upload" value="true" checked="@ViewBag.upload">Upload
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="download" id="download" value="true" checked="@ViewBag.download">Download
                        </label>
                    </div>
                </div>
            </div>
            <div class="gpp20-inputgroup gpp20-datepicker">
                <p class="input-label">Operation Date</p>
                <div class="datepicker gpp_w66p">
                    <input id="fromDate" name="fromDate" aria-label="From Date" value="@ViewBag.fromDate">
                    <span>～</span>
                    <input id="toDate" name="toDate" aria-label="To Date" value="@ViewBag.toDate">
                </div>
            </div>
        </div>
        <input id="page" type="hidden" name="page" />
    </form>
    <div class="gpp_tac gpp_mt-24">
        <button id="submitButton" class="gpp_button gpp_btn-secondry icon-ico_search" onclick="submitForm()">Search</button>
    </div>

    @if (ViewBag.data.modelList != null)
    {
        <form id="ExportFile" asp-controller="Log" asp-action="ExportFile" method="GET">
            <input type="hidden" id="fileNameInput" name="fileName" value="@ViewBag.fileName">
            <input type="hidden" id="userIdInput" name="userId" value="@ViewBag.userId">
            <input type="checkbox" style="display: none" id="uploadInput" name="upload" value="true" checked="@ViewBag.upload">
            <input type="checkbox" style="display: none" id="downloadInput" name="download" value="true" checked="@ViewBag.download">
            <input type="hidden" id="fromDateInput" name="fromDate" value="@ViewBag.fromDate">
            <input type="hidden" id="toDateInput" name="toDate" value="@ViewBag.toDate">
            <input type="hidden" id="type" name="type">
            <input id="pageInput" type="hidden" name="page" value="@ViewBag.data.currentPage">
        </form>

        @if (Enumerable.Count(ViewBag.data.modelList) > 0)
        {
            <div class="gpp20-section">
                <div class="gpp20-logview-utility">
                    <div class="records">
                        <p><span>@ViewBag.data.totalRecords</span> record(s) found</p>
                    </div>
                </div>
                <div class="gpp20-overflowtable">
                    <table class="gpp20_log-table">
                        <thead>
                            <tr>
                                <th colspan="2" class="gpp_w10p">Operation Date</th>
                                <th colspan="2" class="gpp_w30p">UserId</th>
                                <th class="gpp_w10p">Operation Type</th>
                                <th colspan="2">Filename</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in ViewBag.data.modelList)
                            {
                                <tr>
                                    <td colspan="2" style="white-space: nowrap !important">
                                        @item.log.OperationDate

                                    </td>
                                    <td colspan="2">
                                        @item.log.UserId
                                    </td>

                                    @if (item.log.Division == "1")
                                    {
                                        <td>Upload</td>
                                    }
                                    @if (item.log.Division == "2")
                                    {
                                        <td>Download</td>
                                    }
                                    <td colspan="2">
                                        @item.file.FileName
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="gpp20-pagination">
                    <ul class="pagination pagination-sm custom-pagination">
                    </ul>
                </div>
            </div>
        }
        else
        {
            <div class="log-message">No result found</div>
        }
    }

</div>

<div class="modal" tabindex="-1" role="dialog" id="form-modal-message">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div style="text-align: center" class="modal-header">
                    <h5 class="modal-title">Error</h5>
                </div>
                <div style="text-align: center" class="modal-body">
                </div>
                <div style="text-align: right" class="modal-footer">
                    <button type="button" class="close-button" onclick="resetModal()">閉じる </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
        var pageCount = @ViewBag.data.pageCount;
        var numPerPage = 10;
        var currentPage = @ViewBag.data.currentPage;
        var totalRecords = @ViewBag.data.totalRecords;

</script>
<script src="~/lib/jquery/dist/jquery-3.5.1.min.js"></script>
<script src="~/lib/jquery/dist/jquery-ui.js"></script>
<script src="~/lib/jquery/dist/script.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/log.js"></script>
<script src="~/js/paging.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/jquery/dist/pagination.js"></script>





