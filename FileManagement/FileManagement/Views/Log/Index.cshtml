@{ ViewBag.Title = "ログ管理"; }


<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link href="~/css/style.css" rel="stylesheet">
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<!-- container -->
<div class="container">
    <div class="page-heading gpp_page-heading">
        <ul class="breadcrumb">
            <li>
                @Html.ActionLink("ホーム", "GoBackD365", "Home", new { uid = @ViewBag.uid, actionHeader = "Home" })
            </li>
            <li class="active">@ViewBag.Title</li>
        </ul>
        <div class="gpp_mt-32 page-header">
            <h1 class="hd2-type01">@ViewBag.Title</h1>
        </div>
    </div>
    <!-- ログ出力条件設定エリア-->
    <form id="searchForm" asp-controller="Log" asp-action="Search" method="GET" enctype="multipart/form-data">
        <div class="gpp20-section">
            <div class="gpp20-inputgroup">
                <p class="input-label">ファイル名を設定する</p>
                <input class="gpp20-search-form gpp_w66p" placeholder="ファイル名を入力" aria-label="ファイル名を入力" name="fileName" id="fileName" value="@ViewBag.fileName" />
            </div>
            <div class="gpp20-inputgroup">
                <p class="input-label">ユーザーIDを設定する</p>
                <input class="gpp20-search-form gpp_w66p" placeholder="ユーザーIDを入力" aria-label="ユーザーIDを入力" name="userId" id="userId" value="@ViewBag.userId">
            </div>
            <div class="gpp20-inputgroup">
                <p class="input-label">ファイル操作区分</p>
                <div class="chkbox-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="upload" id="upload" value="true" checked="@ViewBag.upload">アップロード
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="download" id="download" value="true" checked="@ViewBag.download">ダウンロード
                        </label>
                    </div>
                </div>
            </div>
            <div class="gpp20-inputgroup gpp20-datepicker">
                <p class="input-label">アクセス日時の期間を設定する</p>
                <div class="datepicker gpp_w66p">
                    <input id="fromDate" name="fromDate" aria-label="開始日付" value="@ViewBag.fromDate">
                    <span>～</span>
                    <input id="toDate" name="toDate" aria-label="終了日付" value="@ViewBag.toDate">
                </div>
            </div>
        </div>
        <input id="page" type="hidden" name="page" />
        <input name="uid" id="uid" value=@ViewBag.uid type="hidden">
        <input name="at" id="at" value=@ViewBag.at type="hidden">
        <input name="ro" id="ro" value=@ViewBag.ro type="hidden">
    </form>
    <div class="gpp_tac gpp_mt-24">
        <button id="submitButton" class="gpp_button gpp_btn-secondry icon-ico_search" onclick="submitForm()">表示する</button>
    </div>

    @if (ViewBag.data.modelList != null)
    {
        <form id="ExportFile" asp-controller="Log" asp-action="ExportFile" method="GET">
            <input type="hidden" id="fileNameInput" name="fileName" value="@ViewBag.fileName">
            <input type="hidden" id="userIdInput" name="userId" value="@ViewBag.userId">
            <input type="checkbox" style="display: none" id="uploadInput" name="upload" value="true" checked="@ViewBag.upload">
            <input type="checkbox" style="display: none" id="downloadInput" name="download" value="true" checked="@ViewBag.download">
            <input type="hidden" id="fromDateInput" name="fromDate" value="@ViewBag.fromDate">
            <input type="hidden" id="toDateInput" name="toDate" value="@ViewBag.toDate">
            <input type="hidden" id="type" name="type">
            <input id="pageInput" type="hidden" name="page" value="@ViewBag.data.currentPage">
            <input name="uid" id="uid" value=@ViewBag.uid type="hidden">
            <input name="at" id="at" value=@ViewBag.at type="hidden">
            <input name="ro" id="ro" value=@ViewBag.ro type="hidden">
        </form>

        @if (Enumerable.Count(ViewBag.data.modelList) > 0)
        {<!-- ログ表示エリア-->
            <div class="gpp20-section">
                <div class="gpp20-logview-utility">
                    <div class="records">
                        <p>総件数：<span>@ViewBag.data.totalRecords</span>件</p>
                    </div>
                    <div class="btn-group">
                        <a class="gpp_button gpp_btn-secondry icon-download gpp_mr-16" onclick="exportExcel()">Excel形式でダウンロード</a>
                        <a class="gpp_button gpp_btn-secondry-outline icon-download" onclick="exportCSV()">CSV形式でダウンロード</a>
                    </div>
                </div>
                <div class="gpp20-overflowtable">
                    <table class="gpp20_log-table">
                        <thead>
                            <tr>
                                <th colspan="2" class="gpp_w10p">アクセス日時</th>
                                <th colspan="2" class="gpp_w30p">ユーザーID</th>
                                <th class="gpp_w10p">ファイル操作区分</th>
                                <th colspan="2">ファイル名</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in ViewBag.data.modelList)
                            {
                                <tr>
                                    <td colspan="2" style="white-space: nowrap !important">
                                        @item.log.OperationDate

                                    </td>
                                    <td colspan="2">
                                        @item.log.UserId
                                    </td>

                                    @if (item.log.Division == "1")
                                    {
                                        <td>アップロード</td>
                                    }
                                    @if (item.log.Division == "2")
                                    {
                                        <td>ダウンロード</td>
                                    }
                                    <td colspan="2">
                                        @item.file.FileName
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="gpp20-pagination">
                    <ul class="pagination pagination-sm custom-pagination">
                    </ul>
                </div>
            </div>
        }
        else
        {
            <div class="log-message">ご入力条件での結果が見つかりません。</div>}}

    @if (ViewBag.data.modelList == null)
    {
        <div class="log-message">ログの表示対象とする検索条件を設定してください。</div>
    }
</div>

<div class="modal" tabindex="-1" role="dialog" id="form-modal-message">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div style="text-align: center" class="modal-header">
                    <h5 class="modal-title"></h5>
                </div>
                <div style="text-align: center" class="modal-body">
                </div>
                <div style="text-align: right" class="modal-footer">
                    <button type="button" class="close-button" onclick="resetModal()">閉じる </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
        var pageCount = @ViewBag.data.pageCount;
        var numPerPage = 10;
        var currentPage = @ViewBag.data.currentPage;
        var totalRecords = @ViewBag.data.totalRecords;
        var maxLengthSearchFileName = @ViewBag.maxLengthSearchFileName;
        var maxLengthSearchUserId = @ViewBag.maxLengthSearchUserId;

</script>
