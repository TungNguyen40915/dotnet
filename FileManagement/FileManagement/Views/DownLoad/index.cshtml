@{
    ViewBag.Title = "Download File";
    ViewBag.Page = "";
}
<link href="/css/style.css" rel="stylesheet">
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<!-- container -->
<div class="container">

    <div class="gpp20-section">
        <div class="view-grid">
            <table class="table table-striped table-fluid gpp_list-table">
                <thead>
                    <tr>
                        <th class="gpp_w40p">FileName</th>
                        <th class="gpp_w20p">File Size</th>
                        <th class="gpp_w20p">Uploaded Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="gpp_w40p">@Model.FileName</td>


                        @if (@Model.FileSize >= 1048576)
                        {
                            <td class="gpp_w20p">@((Model.FileSize / 1048576).ToString("0.00"))MB</td>
                        }
                        else if (@Model.FileSize >= 1024)
                        {
                            <td class="gpp_w20p">@((Model.FileSize /1024).ToString("0.00"))KB</td>
                        }
                        else
                        {
                            <td class="gpp_w20p">@((Model.FileSize /1024).ToString("0.00"))B</td>
                        }

                        <td class="gpp_w20p">@Convert.ToDateTime(Model.UploadedDate).ToString("yyyy/MM/dd HH:mm:ss")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <br />
    <div class="gpp20-section gpp_mb-40">
        <div class="gpp_buttongroup center">
            <form asp-controller="Download" asp-action="Download" method="get" id="download">
                <input name="ffid" value=@ViewBag.fiid type="hidden">
                <button name="action" class="btnDownload gpp_button gpp_btn-secondry icon-download" value="download" type="submit">Download</button>
                <button name="action" class=" gpp_button gpp_btn-primary icon-icon_cancel" value="delete" type="submit">Delete</button>
            </form>

        </div>
    </div>
</div>

<div class="gpp_mt-32">
    <a class="result-filelink" value="" href="/home">Back</a>
</div>

<script src="~/lib/jquery/dist/jquery-3.5.1.min.js"></script>
<script src="~/lib/jquery/dist/jquery-ui.js"></script>
<script src="~/lib/jquery/dist/script.js"></script>
<script src="~/js//download.js"></script>